<div class="container-login">
  <h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :name %></div>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :email %></div>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :closing_date %></div>
      <%= f.select :closing_date, [*1..27,["末日",31]], {include_blank: "選択してください"},class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :payday %></div>
      <%= f.select :payday, [*1..27,["末日",31]], {include_blank: "選択してください"},class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :paymonth %></div>
      <%= f.select :paymonth, [["当月",1,],["翌月",2,]], {include_blank: "選択してください"},class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :basic_daily %></div>
      <%= f.number_field :basic_daily, step: :any, class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :allowance_1 %></div>
      <%= f.text_field :allowance_1, class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :allowance_2 %></div>
      <%= f.text_field :allowance_2, class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :allowance_3 %></div>
      <%= f.text_field :allowance_3, class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :allowance_4 %></div>
      <%= f.text_field :allowance_4, class: 'form-control' %>
    </div>

    <div class="form-group flexbox">
      <div class="label"><%= f.label :allowance_5 %></div>
      <%= f.text_field :allowance_5, class: 'form-control' %>
    </div>

    <div class="form-group">
    <div class="flexbox">
      <div class="label"><%= f.label :password %></div>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
    </div>

      <small class="form-text text-muted textright"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
    </div>

    <div class="form-group flexbox flexbox">
      <div class="label"><%= f.label :password_confirmation %></div>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
    </div>

    <hr class="border-darl my-4">

    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

      <small class="form-text text-muted textright"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
    </div>

    <div class="form-group">
      <%= f.submit t('.update'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <hr class="devise-link my-4">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>