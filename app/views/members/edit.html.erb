<div class="container-login">
  <h2><%= t('members.registrations.edit.title') %>:(<%= @member.name %>)</h2>

  <%= form_for(@member) do |f| %>
    <%= bootstrap_member_error_messages! %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>

        <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('members.registrations.edit.leave_blank_if_you_don_t_want_to_change_it') %></small>
        </div>

        <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
        </div>
        
    <% if false %>
        <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('members.registrations.edit.we_need_your_current_password_to_confirm_your_changes') %></small>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.submit t('members.registrations.edit.update'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to t('members.registrations.edit.cancel_my_account'), member_path(@member), data: {confirm: t('members.registrations.edit.are_you_sure')}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>